<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jsbankagent.management.application.fragments.PersonalInformationJointFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="jsbankagent.management.application.fragments.PersonalInformationJointFragment">

            <android.support.v7.widget.Toolbar
                android:id="@+id/topToolbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/imageviewjslogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_horizontal"
                    android:paddingRight="5dp"
                    android:src="@drawable/js_logo_white"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/imageviewMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_horizontal"
                    android:paddingRight="5dp"
                    android:src="@drawable/menu_ic" />

            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/header_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topToolbar"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_applicant_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/txt_applicant_personal_joint_info"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_applicant_personal_info"
                    android:gravity="end"
                    android:paddingRight="10dp"
                    android:text="@string/tv_form_step_3"
                    android:textColor="@color/color_pending_uploads" />
            </RelativeLayout>
            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/header_relativelayout"
                android:layout_marginTop="5dp"
                android:background="@color/color_nav_bar"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/form_relativelayout"
            android:layout_marginTop="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/view_divider">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_name"
                android:text="@string/personal_info_name"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_name"
                android:layout_below="@+id/tv_personal_info_name"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_nara_number"
                android:text="@string/personal_info_nara_number"
                android:layout_below="@+id/et_personal_info_name"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_nara_number"
                android:layout_below="@+id/tv_personal_info_nara_number"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_expiry_nara_number"
                android:text="@string/personal_info_expiry_nara_number"
                android:layout_below="@+id/et_personal_info_nara_number"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_expiry_nara_number"
                android:layout_below="@+id/tv_personal_info_expiry_nara_number"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_dob"
                android:text="@string/personal_info_expiry_dob"
                android:layout_below="@+id/et_personal_info_expiry_nara_number"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_dob"
                android:hint="@string/tv_dateofbirth"
                android:layout_below="@+id/tv_personal_info_dob"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_gender"
                android:layout_below="@+id/et_personal_info_dob"
                android:text="@string/tv_gender"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personal_info_gender_layout"
                android:layout_below="@+id/tv_personal_info_gender"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_personal_info_gender"
                    android:spinnerMode="dropdown"
                    android:nextFocusDown="@id/et_name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_expiry_date_visa"
                android:text="@string/personal_info_expiry_dob"
                android:layout_below="@+id/personal_info_gender_layout"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_expiry_date_visa"
                android:layout_below="@+id/tv_personal_info_expiry_date_visa"
                android:background="@drawable/custom_border_edit_text"
                android:hint="@string/tv_expiry_date_visa"
                android:inputType="text" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_father_name"
                android:text="@string/personal_info_father_name"
                android:layout_below="@+id/et_personal_info_expiry_date_visa"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_expiry_father_name"
                android:layout_below="@+id/tv_personal_info_father_name"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_us_citizen"
                android:layout_below="@+id/et_personal_info_expiry_father_name"
                android:text="@string/personal_info_us_citizen"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personal_info_us_citizen_layout"
                android:layout_below="@+id/tv_personal_info_us_citizen"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_personal_info_us_citizen"
                    android:spinnerMode="dropdown"
                    android:nextFocusDown="@id/et_name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_nationality"
                android:text="@string/personal_info_nationality"
                android:layout_below="@+id/personal_info_us_citizen_layout"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_nationality"
                android:layout_below="@+id/tv_personal_info_nationality"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_ntn_number"
                android:text="@string/personal_info_nationalityntn_number"
                android:layout_below="@+id/et_personal_info_nationality"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_ntn_number"
                android:layout_below="@+id/tv_personal_info_ntn_number"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_place_of_birth"
                android:text="@string/tv_placeofbirth"
                android:layout_below="@+id/et_personal_info_ntn_number"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_place_of_birth"
                android:layout_below="@+id/tv_personal_info_place_of_birth"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_marital_status"
                android:layout_below="@+id/et_personal_info_place_of_birth"
                android:text="@string/tv_maritalstatus"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personal_info_marital_status_layout"
                android:layout_below="@+id/tv_personal_info_marital_status"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_personal_info_marital_status"
                    android:spinnerMode="dropdown"
                    android:nextFocusDown="@id/et_name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_qualification"
                android:layout_below="@+id/personal_info_marital_status_layout"
                android:text="@string/tv_qualification"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personal_info_qualification_layout"
                android:layout_below="@+id/tv_personal_info_qualification"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_personal_info_qualification"
                    android:spinnerMode="dropdown"
                    android:nextFocusDown="@id/et_name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_profession"
                android:layout_below="@+id/personal_info_qualification_layout"
                android:text="@string/tv_profession"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personal_info_profession_layout"
                android:layout_below="@+id/tv_personal_info_profession"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_personal_info_profession"
                    android:spinnerMode="dropdown"
                    android:nextFocusDown="@id/et_name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_employer_name"
                android:text="@string/tv_employer_business"
                android:layout_below="@+id/personal_info_profession_layout"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_employer_name"
                android:layout_below="@+id/tv_personal_info_employer_name"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_nature_of_business"
                android:text="@string/tv_nature_of_business"
                android:layout_below="@+id/et_personal_info_employer_name"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_nature_of_business"
                android:layout_below="@+id/tv_personal_info_nature_of_business"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_designation"
                android:text="@string/tv_designation"
                android:layout_below="@+id/et_personal_info_nature_of_business"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_designation"
                android:layout_below="@+id/tv_personal_info_designation"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_residential_area"
                android:text="@string/tv_residential_address"
                android:layout_below="@+id/et_personal_info_designation"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_residential_area"
                android:layout_below="@+id/tv_personal_info_residential_area"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_business_address"
                android:text="@string/tv_office_business_address"
                android:layout_below="@+id/et_personal_info_residential_area"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_business_address"
                android:layout_below="@+id/tv_personal_info_business_address"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_office_contact_number"
                android:text="@string/tv_office_contact_number"
                android:layout_below="@+id/et_personal_info_business_address"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_office_contact_number"
                android:layout_below="@+id/tv_personal_info_office_contact_number"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_residential_contact_number"
                android:text="@string/tv_residential_contact_no"
                android:layout_below="@+id/et_personal_info_office_contact_number"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_residential_contact_number"
                android:layout_below="@+id/tv_personal_info_residential_contact_number"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_personal_info_cell_number"
                android:text="@string/tv_cell_number"
                android:layout_below="@+id/et_personal_info_residential_contact_number"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_personal_info_cell_number"
                android:layout_below="@+id/tv_personal_info_cell_number"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_next_relativelayout"
                android:layout_marginTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/form_relativelayout">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_next_step_3"
                    android:text="@string/btn_text_next"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@color/colorPrimary"/>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</FrameLayout>
