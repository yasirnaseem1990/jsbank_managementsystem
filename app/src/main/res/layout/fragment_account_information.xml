<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jsbankagent.management.application.fragments.AccountInformationFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="jsbankagent.management.application.fragments.AccountInformationFragment">

            <android.support.v7.widget.Toolbar
                android:id="@+id/topToolbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/imageviewjslogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_horizontal"
                    android:paddingRight="5dp"
                    android:src="@drawable/js_logo_white"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/imageviewMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_horizontal"
                    android:paddingRight="5dp"
                    android:src="@drawable/menu_ic" />

            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/header_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topToolbar"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_applicant_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/txt_applicant_account_info"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_applicant_personal_info"
                    android:gravity="end"
                    android:paddingRight="10dp"
                    android:text="@string/tv_form_step_2"
                    android:textColor="@color/color_pending_uploads" />
            </RelativeLayout>
            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/header_relativelayout"
                android:layout_marginTop="5dp"
                android:background="@color/color_nav_bar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/form_relativelayout"
            android:layout_marginTop="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/view_divider">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_accountTitle"
                android:text="@string/tv_account_title"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_accountTitle"
                android:layout_below="@+id/tv_accountTitle"
                android:background="@drawable/custom_border_edit_text"
                android:inputType="text" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_type_of_current_account"
                android:layout_below="@+id/et_accountTitle"
                android:text="@string/type_of_current_account"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/type_of_current_account_layout"
                android:layout_below="@+id/tv_type_of_current_account"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_type_of_current_account"
                    android:spinnerMode="dropdown"
                    android:nextFocusDown="@id/et_name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_type_of_account"
                android:layout_below="@+id/type_of_current_account_layout"
                android:text="@string/type_of_account"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/type_of_account_layout"
                android:layout_below="@+id/tv_type_of_account"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_type_of_account"
                    android:spinnerMode="dropdown"
                    android:nextFocusDown="@id/et_name" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_currency"
                android:layout_below="@+id/type_of_account_layout"
                android:text="@string/currency"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/currency_layout"
                android:layout_below="@+id/tv_currency"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_currency"
                    android:spinnerMode="dropdown"
                    android:nextFocusDown="@id/et_name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_country_residental_status"
                android:layout_below="@+id/currency_layout"
                android:text="@string/country_residental_status"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/country_residental_status_layout"
                android:layout_below="@+id/tv_country_residental_status"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_country_residental_status"
                    android:spinnerMode="dropdown"
                    android:nextFocusDown="@id/et_name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_operating_instructions"
                android:layout_below="@+id/country_residental_status_layout"
                android:text="@string/operating_instructions"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/operating_instructions_layout"
                android:layout_below="@+id/tv_operating_instructions"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_operating_instructions"
                    android:spinnerMode="dropdown"
                    android:nextFocusDown="@id/et_name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cheque_book_required"
                android:layout_below="@+id/operating_instructions_layout"
                android:text="@string/cheque_book_required"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cheque_book_required_layout"
                android:layout_below="@+id/tv_cheque_book_required"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_cheque_book_required"
                    android:spinnerMode="dropdown"
                    android:nextFocusDown="@id/et_name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_yes_cheque_book_required"
                android:layout_below="@+id/cheque_book_required_layout"
                android:text="@string/yes_cheque_book_required"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yes_cheque_book_required_layout"
                android:layout_below="@+id/tv_yes_cheque_book_required"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_yes_cheque_book_required"
                    android:spinnerMode="dropdown"
                    android:nextFocusDown="@id/et_name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_zakat_applicable"
                android:layout_below="@+id/yes_cheque_book_required_layout"
                android:text="@string/zakat_applicable"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/zakat_applicable_layout"
                android:layout_below="@+id/tv_zakat_applicable"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_zakat_applicable"
                    android:spinnerMode="dropdown"
                    android:nextFocusDown="@id/et_name" />
            </RelativeLayout>

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_next_relativelayout"
                android:layout_marginTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/form_relativelayout">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_next_step_2"
                    android:text="@string/btn_text_next"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@color/colorPrimary"/>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>
