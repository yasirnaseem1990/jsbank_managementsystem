<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jsbankagent.management.application.fragments.EBankingFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="jsbankagent.management.application.fragments.NextOfKinFragment">


            <android.support.v7.widget.Toolbar
                android:id="@+id/topToolbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/imageviewjslogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_horizontal"
                    android:paddingRight="5dp"
                    android:src="@drawable/js_logo_white"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/imageviewMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_horizontal"
                    android:paddingRight="5dp"
                    android:src="@drawable/menu_ic" />

            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/header_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topToolbar"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_applicant_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/txt_e_banking"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_applicant_personal_info"
                    android:gravity="end"
                    android:paddingRight="10dp"
                    android:text="@string/tv_form_step_8"
                    android:textColor="@color/color_pending_uploads" />
            </RelativeLayout>

            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/header_relativelayout"
                android:layout_marginTop="5dp"
                android:background="@color/color_nav_bar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/form_relativelayout"
            android:layout_marginTop="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/view_divider">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_e_banking_sms_alert"
                android:text="@string/e_banking_sms_alert"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/e_banking_sms_alert_layout"
                android:layout_below="@+id/tv_e_banking_sms_alert"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_e_banking_sms_alert"
                    android:spinnerMode="dropdown" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_e_banking_internet_banking"
                android:layout_below="@+id/e_banking_sms_alert_layout"
                android:text="@string/e_banking_internet_banking"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/e_banking_internet_banking_layout"
                android:layout_below="@+id/tv_e_banking_internet_banking"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_e_banking_internet_banking"
                    android:spinnerMode="dropdown" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_e_banking_mobile_banking"
                android:layout_below="@+id/e_banking_internet_banking_layout"
                android:text="@string/e_banking_mobile_banking"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/e_banking_mobile_banking_layout"
                android:layout_below="@+id/tv_e_banking_mobile_banking"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_e_banking_mobile_banking"
                    android:spinnerMode="dropdown" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_e_banking_e_statement"
                android:layout_below="@+id/e_banking_mobile_banking_layout"
                android:text="@string/e_banking_e_statement"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/e_banking_e_statement_layout"
                android:layout_below="@+id/tv_e_banking_e_statement"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_e_banking_e_statement"
                    android:spinnerMode="dropdown" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_e_banking_frequency"
                android:layout_below="@+id/e_banking_e_statement_layout"
                android:text="@string/e_banking_frequency"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/e_banking_frequency_layout"
                android:layout_below="@+id/tv_e_banking_frequency"
                android:background="@drawable/border_edittext">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/spinner_e_banking_frequency"
                    android:spinnerMode="dropdown" />
            </RelativeLayout>

        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_next_relativelayout"
                android:layout_marginTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/form_relativelayout">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_next_step_8"
                    android:text="@string/btn_text_save"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@color/colorPrimary"/>
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
